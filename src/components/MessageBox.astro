<div
  class="p-6 mx-auto rounded-xl bg-neutral-800 shadow-lg flex items-center space-x-4"
>
  <div class="shrink-0 text-neutral-400">
    <img class="h-12 w-12 fa-solid fa-triangle-exclamation" alt="" />
  </div>
  <div>
    <div class="text-xl font-medium"><slot name="title" /></div>
    <p class=""><slot name="default" /></p>
  </div>
</div>

<style lang="scss" define:vars={{ hsl }}>
  .MessageBox {
    display: flex;
    border: 2px solid hsla(var(--hsl), 20%);
    border-radius: var(--border-radius);
    background-color: hsla(var(--hsl), 15%);
    overflow: hidden;

    .Aside {
      padding: 1.5rem 1rem;
      background-color: hsla(var(--hsl), 20%);

      .svg-inline--fa {
        color: hsl(var(--hsl));
        width: 1.25em;
      }
    }

    .Body {
      padding: 1.5rem;
      text-align: left;

      .Title {
        font-weight: 600;
        line-height: 1.25;
      }

      .Message {
        margin: 0 auto;
        padding-top: 0.25rem;
      }
    }
  }
</style>
